<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<servlet>
		<servlet-name>remoteGwtServlet</servlet-name>
		<servlet-class>com.smartgxt.core.server.RemoteGwtServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>remoteGwtServlet</servlet-name>
		<url-pattern>/showcase/gwtservlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>remoteHttpServlet</servlet-name>
		<servlet-class>com.smartgxt.core.server.RemoteHttpServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>remoteHttpServlet</servlet-name>
		<url-pattern>/showcase/httpservlet</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
